{% extends 'base.html.twig' %}

{% block title %}Proprietaire{% endblock %}

{% block body %}
    <h1>Liste Proprietaire</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proprietaire in proprietaires %}
            <tr>
                {# <td>{{ proprietaire.id }}</td> #}
                <td>{{ proprietaire.nom }}</td>
                <td>{{ proprietaire.prenom }}</td>
                <td>{{ proprietaire.email }}</td>
                <td>{{ proprietaire.telephone }}</td>
                <td>{{ proprietaire.adresse }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_proprietaire_show', {'id': proprietaire.id}) }}">voir</a>
                    <a class="btn btn-warning" href="{{ path('app_proprietaire_edit', {'id': proprietaire.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">aucun proprietaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_proprietaire_new') }}">Create new</a> #}
{% endblock %}
